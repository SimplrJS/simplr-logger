{
    "compilerOptions": {
        "strict": true,
        "target": "es5",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "@types",
        "noEmitHelpers": true,
        "importHelpers": true,
        "pretty": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "alwaysStrict": false,
        "noImplicitUseStrict": true,
        "skipLibCheck": true,
        "baseUrl": "./src/",
        "paths": {
            "simplr-logger": [
                "./index"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "@types",
        "dist",
        "scripts",
        "./*.ts",
        "__test__/**/*"
    ]
}
